{
    "name": "R (rocker/r-ver base)",
    "dockerFile": "Dockerfile",
    "features": {
        "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
            "version": "prerelease"
        },
        "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
            "packages": "libudunits2-dev,libxtst6,libxt6,libmagick++-dev,texlive-latex-extra,texlive-fonts-recommended"
        },
        "ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
            "packages": "github::rstudio/renv,covr,tidyverse,git2r,here,httpgd,knitr,spelling,lattice,party,plyr,proto,precommit,polspline,randomForest,ranger,rmarkdown,roxygen2,testthat,classInt,usethis,mipfp,rmutil,broman"
        },
        "ghcr.io/devcontainers-contrib/features/pre-commit:2": {}
    },
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=~/.gitconfig,type=bind,consistency=cached"
    ],
    "onCreateCommand": "pre-commit install && pre-commit run",
    "customizations": {
        "vscode": {
            "extensions": [
                "mechatroner.rainbow-csv",
                "REditorSupport.r",
                "RDebugger.r-debugger",
                "james-yu.latex-workshop",
                "ms-azuretools.vscode-docker"
            ]
        },
        "codespaces": {
            "openFiles": [
                "DESCRIPTION",
                "NEWS.md"
            ]
        }
    }
}
